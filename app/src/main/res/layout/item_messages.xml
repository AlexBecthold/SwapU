<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <android.support.v7.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="12dp"
        android:id="@+id/view2"
        android:layout_marginRight="@dimen/default_margin"
        card_view:cardCornerRadius="40dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">
    <ImageView
        android:id="@+id/message_pro_pic"
        android:contentDescription="@string/profile_other"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/messages_name"
        android:text="body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/view2"
        android:layout_weight="1"/>

       <TextView
           android:textSize="18sp"
           android:id="@+id/messages_lastMessage"
           android:text="bidy"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/messages_name"
           android:layout_alignLeft="@id/messages_name"
           android:textColor="@color/black"
           android:layout_weight="1">
    </TextView>

   <TextView
       android:id="@+id/message_date"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:text="date"
       android:gravity="right"
       android:paddingRight="10dp"
       android:paddingTop="20dp"
       />
</RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>